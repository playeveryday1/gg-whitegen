# ===========================================
# GG WHITEGEN - Environment Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Keys - AI Models
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Image APIs
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
UNSPLASH_SECRET_KEY=your-unsplash-secret-key
PEXELS_API_KEY=your-pexels-api-key
PIXABAY_API_KEY=your-pixabay-api-key

# Content Quality APIs
COPYSCAPE_API_KEY=your-copyscape-api-key
COPYSCAPE_USERNAME=your-copyscape-username

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/gg_whitegen
REDIS_URL=redis://localhost:6379

# Queue Configuration
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
MAX_CONCURRENT_JOBS=5

# Generation Settings
GENERATION_TIMEOUT=120000
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60000

# Output Settings
OUTPUT_DIR=./output
OUTPUT_FORMAT=zip
ENABLE_CACHING=true
CLEANUP_INTERVAL=3600000

# Quality Gates
MIN_UNIQUENESS_SCORE=95
MIN_LIGHTHOUSE_SCORE=90
MIN_ACCESSIBILITY_SCORE=95
ENABLE_GOOGLE_ADS_CHECK=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
ENABLE_METRICS=true

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
API_KEY=your-api-key-for-authentication
CORS_ORIGIN=http://localhost:3000

# Google Ads Testing (Optional)
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CLIENT_ID=your-client-id
GOOGLE_ADS_CLIENT_SECRET=your-client-secret
